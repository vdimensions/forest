{
  "metadata": [
    {
      "src": [
        {
          "files": [ "codebase/**/*.csproj", "codebase/**/*.fsproj" ],
          "exclude": [ "codebase/**/bin/**", "codebase/**/obj/**", "codebase/**/.paket/**", "codebase/**/paket-files/**" ],
          "src": "codebase"
        }
      ],
      "properties": {
        "TargetFramework": "netstandard2.0"
      },
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "docs/toc.yml", "docs/articles/**/*.md", "*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "docs/articles/images/**"]
      }
    ],
    "overwrite": "docs/specs/*.md",
    "globalMetadata": {
      "_appTitle": "Forest framework website",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
