{
  "metadata": [
    {
      "src": [
        {
          "src": "codebase/core/forms",
          "files": [ "src/*.csproj" ],
          "exclude": [ "src/bin/**", "src/obj/**", "src/.paket/**", "src/paket-files/**" ]
        }
      ],
      "properties": {
        "TargetFramework": "netstandard2.0"
      },
      "dest": "obj/docfx/api/core/forms"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/docfx/api",
        "dest": "api"
      },
      {
        "files": [ "docs/toc.yml" ]
      },
      {
        "files": [ "docs/articles/**/*.md" ]
      },
      {
        "files": [ "*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "docs/articles/images/**"]
      }
    ],
    "overwrite": "docs/specs/*.md",
    "globalMetadata": {
      "_appTitle": "Forest framework website",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
